<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |form| -%>
	<p><label for="login">Имя пользователя</label><br/>
	<%= form.text_field :login %></p>

	<p><label for="email">Адрес электронной почты</label><br/>
	<%= form.text_field :email %></p>

	<p><label for="password">Пароль</label><br/>
	<%= form.password_field :password %></p>

	<p><label for="password_confirmation">Подтверждение пароля</label><br/>
	<%= form.password_field :password_confirmation %></p>

<p><%= submit_tag 'Создать учётную запись' %></p>
<% end -%>
