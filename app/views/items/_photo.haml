%span[ photo ]
  %span.yoxview= link_to_show_photo photo, false
  = link_to_remove_from_item Photo
  %br
  - fields_for "item[existing_photo_attributes][]", photo do |photo_form|
    = photo_form.text_area :comment, :rows => 2, :class => "photo_comment"
  = check_box_tag "item[photo_ids][]", photo.id, true, :style => "visibility: hidden;"
 