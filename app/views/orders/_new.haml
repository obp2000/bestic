= page_title
- remote_form_for @object, :url => orders_path do |f|
  = f.error_messages
  %fieldset.ui-widget-content
    %div
      = f.label( :email, Order.email_rus + red_star )
      = f.text_field :email
    %div
      = f.label( :phone_number, Order.phone_number_rus + red_star )
      = f.text_field :phone_number
    %div
      = f.label( :ship_to_first_name, Order.ship_to_first_name_rus + red_star )
      = f.text_field :ship_to_first_name
    %div
      = f.label( :ship_to_city, Order.ship_to_city_rus )
      = f.text_field :ship_to_city
    %div
      = f.label( :ship_to_address, Order.ship_to_address_rus )
      = f.text_area :ship_to_address, :rows => 2
  %fieldset.ui-widget-content
    %div
      = f.label( :comments, Order.comments_rus )
      = f.text_area :comments, :rows => 4
  %fieldset.ui-widget-content
    = Order.captcha_text + red_star
    = captcha_block
  %div= red_star + " - " + ActionView::Base::REQUIRED_FIELDS
  %div= submit_form f, Order.submit_text
