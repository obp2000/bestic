%h3 Оформление заказа
%div
  - remote_form_for @order, :url => orders_path do |f|
    = f.error_messages
    = f.text_field :email
    %fieldset.ui-widget-content.ui-corner-all.order_details
      %legend
        %b
          Контактная информация
      %label(for="order_email") Адрес электронной почты
      %br
      = f.text_field :email
      %br
      %label(for="order_phone_number") Контактный телефон
      %br
      = f.text_field :phone_number
      %br
      %label(for="order_ship_to_last_name") Фамилия
      %br
      = f.text_field :ship_to_last_name
      %br
      %label(for="order_ship_to_first_name") Имя
      %br
      = f.text_field :ship_to_first_name
      %br
      %label(for="order_ship_to_middle_name") Отчество
      %br
      = f.text_field :ship_to_middle_name
      %br

    %fieldset.ui-widget-content.ui-corner-all.order_details
      %legend
        %b
          Адрес
      %label(for="order_ship_to_country") Страна
      %br
      = f.country_select :ship_to_country, 'Russian Federation'
      %br
      %label(for="order_ship_to_city") Город
      %br
      = f.text_field :ship_to_city
      %br
      %label(for="order_ship_to_address") Адрес
      %br
      = f.text_area :ship_to_address, :rows => 3
    
      %p= f.submit "Разместить заказ"
